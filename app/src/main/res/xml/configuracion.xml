<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:background="@color/colorBack_01"
        android:defaultValue="Default_player"
        android:key="name"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Nickname" />
    <PreferenceCategory
        android:background="@color/colorPrimary"
        android:title="Preferencias de sistema">

        <ListPreference
            android:background="@color/colorPrimary"
            android:defaultValue="1"
            android:entries="@array/dificultad"
            android:entryValues="@array/dificultad"
            android:key="list_dificultad"
            android:title="Dificultad" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="sonido"
            android:title="Sonido" />
    </PreferenceCategory>
    <PreferenceCategory
        android:background="@color/colorPrimary"
        android:title="Acerca de...">
    </PreferenceCategory>
</PreferenceScreen>